<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/login_bg"
    tools:context=".ui.activity.RegisterActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/forgotPasswordTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="70dp"
            android:layout_centerHorizontal="true"
            android:text="忘记密码"
            android:textSize="18sp"
            android:textColor="@color/white"/>

        <ImageView
            android:id="@+id/nuo_img"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/forgotPasswordTitle"
            android:layout_marginTop="30dp"
            android:layout_centerHorizontal="true"
            android:src="@drawable/login_nuo"/>


        <RelativeLayout
            android:id="@+id/forgotPassword_password_rl"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp"
            android:layout_below="@+id/forgotPassword_email_rl"

            android:layout_centerHorizontal="true">
            <View
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:background="@drawable/register_button_bg"/>
            <EditText
                android:id="@+id/forgotPassword_password_et"
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:layout_marginRight="50dp"
                android:layout_marginLeft="25dp"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="5dp"
                android:layout_centerVertical="true"
                android:hint="密码"
                android:textColor="@color/white"
                android:textColorHint="@color/white"
                android:maxLines="1"
                android:background="@null"
                android:textCursorDrawable="@drawable/cursor_grey"/>
            <ImageView
                android:id="@+id/forgotPassword_password_img"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="25dp"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="5dp"
                android:layout_alignParentRight="true"
                android:src="@drawable/login_user_icon"
                android:layout_centerVertical="true" />
        </RelativeLayout>


        <RelativeLayout
            android:id="@+id/forgotPassword_check_rl"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp"
            android:layout_below="@+id/forgotPassword_password_rl"
            android:layout_centerHorizontal="true">
            <View
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:background="@drawable/register_button_bg"/>
            <EditText
                android:id="@+id/forgotPassword_check_et"
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:layout_marginRight="50dp"
                android:layout_marginLeft="25dp"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="5dp"
                android:layout_centerVertical="true"
                android:hint="确认密码"
                android:textColor="@color/white"
                android:textColorHint="@color/white"
                android:maxLines="1"
                android:background="@null"
                android:inputType="textPassword"
                android:textCursorDrawable="@drawable/cursor_grey"/>
            <ImageView
                android:id="@+id/forgotPassword_check_img"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="25dp"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="5dp"
                android:layout_alignParentRight="true"
                android:src="@drawable/login_lock_icon"
                android:layout_centerVertical="true" />
        </RelativeLayout>


        <LinearLayout
            android:id="@+id/forgotPassword_code_ll"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp"
            android:layout_below="@+id/forgotPassword_check_rl"
            android:layout_centerHorizontal="true">


            <RelativeLayout
                android:id="@+id/forgotPassword_code_rl"
                android:layout_weight="2"
                android:layout_width="0dp"
                android:layout_height="50dp"
                android:layout_gravity="center_vertical">
                <View
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:background="@drawable/register_button_bg"/>
                <EditText
                    android:id="@+id/forgotPassword_code_et"
                    android:layout_width="300dp"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="50dp"
                    android:layout_marginLeft="25dp"
                    android:layout_marginTop="5dp"
                    android:layout_marginBottom="5dp"
                    android:layout_centerVertical="true"
                    android:hint="验证码"
                    android:textColor="@color/white"
                    android:textColorHint="@color/white"
                    android:maxLines="1"
                    android:background="@null"
                    android:inputType="textPassword"
                    android:textCursorDrawable="@drawable/cursor_grey"/>
                <ImageView
                    android:id="@+id/forgotPassword_code_img"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="25dp"
                    android:layout_marginTop="5dp"
                    android:layout_marginBottom="5dp"
                    android:layout_alignParentRight="true"
                    android:src="@drawable/login_user_icon"
                    android:layout_centerVertical="true" />
            </RelativeLayout>

            <Button
                android:id="@+id/getCodeButton"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="获取验证码"
                android:textColor="@color/white"
                android:textSize="16sp"
                android:layout_marginLeft="10dp"
                android:background="@drawable/register_button_bg2"/>
        </LinearLayout>


        <RelativeLayout
            android:id="@+id/forgotPassword_email_rl"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginTop="30dp"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp"
            android:layout_below="@+id/nuo_img"
            android:layout_centerHorizontal="true">
            <View
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:background="@drawable/register_button_bg"/>
            <EditText
                android:id="@+id/forgotPassword_email_et"
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:layout_marginRight="50dp"
                android:layout_marginLeft="25dp"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="5dp"
                android:layout_centerVertical="true"
                android:hint="邮箱"
                android:textColor="@color/white"
                android:textColorHint="@color/white"
                android:maxLines="1"
                android:background="@null"
                android:inputType="textEmailAddress"
                android:textCursorDrawable="@drawable/cursor_grey"/>
            <ImageView
                android:id="@+id/forgotPassword_email_img"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="25dp"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="5dp"
                android:layout_alignParentRight="true"
                android:src="@drawable/login_user_icon"
                android:layout_centerVertical="true" />
        </RelativeLayout>


        <Button
            android:id="@+id/applyButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="确定"
            android:textColor="@color/white"
            android:textSize="16sp"
            android:layout_below="@id/forgotPassword_code_ll"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="30dp"
            android:layout_marginLeft="80dp"
            android:layout_marginRight="80dp"
            android:background="@drawable/register_button_bg2"/>

    </RelativeLayout>

</ScrollView>