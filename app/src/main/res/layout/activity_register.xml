<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/login_bg"
    tools:context=".ui.activity.RegisterWithImmersActivity">

   <RelativeLayout
       android:layout_width="match_parent"
       android:layout_height="match_parent">

       <TextView
           android:id="@+id/loginTitle"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:layout_marginTop="70dp"
           android:layout_centerHorizontal="true"
           android:text="注册"
           android:textSize="18sp"
           android:textColor="@color/white"/>

       <ImageView
           android:id="@+id/nuo_img"
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:layout_below="@+id/loginTitle"
           android:layout_marginTop="30dp"
           android:layout_centerHorizontal="true"
           android:src="@drawable/login_nuo"/>


       <RelativeLayout
           android:id="@+id/register_user_rl"
           android:layout_width="match_parent"
           android:layout_height="50dp"
           android:layout_marginTop="30dp"
           android:layout_marginLeft="30dp"
           android:layout_marginRight="30dp"
           android:layout_below="@+id/nuo_img"

           android:layout_centerHorizontal="true">
           <View
               android:layout_width="wrap_content"
               android:layout_height="match_parent"
               android:background="@drawable/register_button_bg"/>
           <EditText
               android:id="@+id/register_user_et"
               android:layout_width="300dp"
               android:layout_height="wrap_content"
               android:layout_marginRight="50dp"
               android:layout_marginLeft="25dp"
               android:layout_marginTop="5dp"
               android:layout_marginBottom="5dp"
               android:layout_centerVertical="true"
               android:hint="用户名"
               android:textColor="@color/white"
               android:textColorHint="@color/white"
               android:maxLines="1"
               android:background="@null"
               android:textCursorDrawable="@drawable/cursor_grey"/>
           <ImageView
               android:id="@+id/register_user_img"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:layout_marginRight="25dp"
               android:layout_marginTop="5dp"
               android:layout_marginBottom="5dp"
               android:layout_alignParentRight="true"
               android:src="@drawable/login_user_icon"
               android:layout_centerVertical="true" />
       </RelativeLayout>


       <RelativeLayout
           android:id="@+id/register_password_rl"
           android:layout_width="match_parent"
           android:layout_height="50dp"
           android:layout_marginTop="20dp"
           android:layout_marginLeft="30dp"
           android:layout_marginRight="30dp"
           android:layout_below="@+id/register_user_rl"
           android:layout_centerHorizontal="true">
           <View
               android:layout_width="wrap_content"
               android:layout_height="match_parent"
               android:background="@drawable/register_button_bg"/>
           <EditText
               android:id="@+id/register_password_et"
               android:layout_width="300dp"
               android:layout_height="wrap_content"
               android:layout_marginRight="50dp"
               android:layout_marginLeft="25dp"
               android:layout_marginTop="5dp"
               android:layout_marginBottom="5dp"
               android:layout_centerVertical="true"
               android:hint="密码"
               android:textColor="@color/white"
               android:textColorHint="@color/white"
               android:maxLines="1"
               android:background="@null"
               android:inputType="textPassword"
               android:textCursorDrawable="@drawable/cursor_grey"/>
           <ImageView
               android:id="@+id/register_password_img"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:layout_marginRight="25dp"
               android:layout_marginTop="5dp"
               android:layout_marginBottom="5dp"
               android:layout_alignParentRight="true"
               android:src="@drawable/login_lock_icon"
               android:layout_centerVertical="true" />
       </RelativeLayout>


       <RelativeLayout
           android:id="@+id/register_check_rl"
           android:layout_width="match_parent"
           android:layout_height="50dp"
           android:layout_marginTop="20dp"
           android:layout_marginLeft="30dp"
           android:layout_marginRight="30dp"
           android:layout_below="@+id/register_password_rl"

           android:layout_centerHorizontal="true">
           <View
               android:layout_width="wrap_content"
               android:layout_height="match_parent"
               android:background="@drawable/register_button_bg"/>
           <EditText
               android:id="@+id/register_check_et"
               android:layout_width="300dp"
               android:layout_height="wrap_content"
               android:layout_marginRight="50dp"
               android:layout_marginLeft="25dp"
               android:layout_marginTop="5dp"
               android:layout_marginBottom="5dp"
               android:layout_centerVertical="true"
               android:hint="确认密码"
               android:textColor="@color/white"
               android:textColorHint="@color/white"
               android:maxLines="1"
               android:background="@null"
               android:inputType="textPassword"
               android:textCursorDrawable="@drawable/cursor_grey"/>
           <ImageView
               android:id="@+id/register_check_img"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:layout_marginRight="25dp"
               android:layout_marginTop="5dp"
               android:layout_marginBottom="5dp"
               android:layout_alignParentRight="true"
               android:src="@drawable/login_lock_icon"
               android:layout_centerVertical="true" />
       </RelativeLayout>


       <RelativeLayout
           android:id="@+id/register_email_rl"
           android:layout_width="match_parent"
           android:layout_height="50dp"
           android:layout_marginTop="20dp"
           android:layout_marginLeft="30dp"
           android:layout_marginRight="30dp"
           android:layout_below="@+id/register_check_rl"
           android:layout_centerHorizontal="true">
           <View
               android:layout_width="wrap_content"
               android:layout_height="match_parent"
               android:background="@drawable/register_button_bg"/>
           <EditText
               android:id="@+id/register_email_et"
               android:layout_width="300dp"
               android:layout_height="wrap_content"
               android:layout_marginRight="50dp"
               android:layout_marginLeft="25dp"
               android:layout_marginTop="5dp"
               android:layout_marginBottom="5dp"
               android:layout_centerVertical="true"
               android:hint="邮箱"
               android:textColor="@color/white"
               android:textColorHint="@color/white"
               android:maxLines="1"
               android:background="@null"
               android:inputType="textEmailAddress"
               android:textCursorDrawable="@drawable/cursor_grey"/>
           <ImageView
               android:id="@+id/register_email_img"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:layout_marginRight="25dp"
               android:layout_marginTop="5dp"
               android:layout_marginBottom="5dp"
               android:layout_alignParentRight="true"
               android:src="@drawable/register_mail_icon"
               android:layout_centerVertical="true" />
       </RelativeLayout>


       <Button
           android:id="@+id/registerButton"
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:text="注册"
           android:textColor="@color/white"
           android:textSize="16sp"
           android:layout_below="@id/register_email_rl"
           android:layout_centerHorizontal="true"
           android:layout_marginTop="20dp"
           android:layout_marginBottom="30dp"
           android:layout_marginLeft="80dp"
           android:layout_marginRight="80dp"
           android:background="@drawable/register_button_bg2"/>


   </RelativeLayout>

</ScrollView>